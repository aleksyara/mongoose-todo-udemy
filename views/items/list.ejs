<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box" id="heading">
  <a href="/items/new">Add new items to do</a>
</div>
<div class="box">
  <!-- looping over newListItems -->
  <% allItems.forEach((item) => { %>
  <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
    <div class="item">
      <button type="submit" class="delete-button">X</button>
    </div>
  </form>

  <div class="item">
    <p><%= item.title %></p>
    <p><%= item.priority%></p>
    <a href="/items/<%= item._id%>">Details</a>
  </div>
  <% }) %> <%- include("footer") -%>
</div>
